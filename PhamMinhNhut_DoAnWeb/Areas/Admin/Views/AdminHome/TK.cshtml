@model List<PhamMinhNhut_DoAnWeb.Models.User>
@{
    ViewBag.Title = "TK";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage1.cshtml";
}



<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">
                Account Management
            </h6>
            <a href="~/User/Login">Sign In User</a>
            <a href="@Url.Action("Register", "AdminHome", new { area = "Admin" })" >Sign In Admin</a>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-white">
                        <th scope="col"></th>
                        <th scope="col">UserId</th>
                        <th scope="col">UserName</th>
                        <th scope="col">EmailAddress</th>
                  
                       
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><input class="form-check-input" type="checkbox"></td>
                            <td>@item.UserId</td>
                            <td>@item.UserName</td>
                            <td>@item.EmailAddress</td>
                            
                        
                            <td><a class="btn btn-sm btn-primary" href="@Url.Action("DeleteUser", "AdminHome", new { area = "Admin", id = item.UserId })">DELETE</a></td>
                            <td><a class="btn btn-sm btn-primary" href="@Url.Action("EditUser", "AdminHome", new { area = "Admin", id = item.UserId })">Edit</a></td>

                 
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
