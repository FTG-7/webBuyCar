    <script>
        $(document).ready(function () {
            $(window).scroll(function () {
                if ($(this).scrollTop()) {
                    $('.nav-menu').addClass('sticky');
                } else {
                    $('.nav-menu').removeClass('sticky');
                }
            })
        })
    </script>

