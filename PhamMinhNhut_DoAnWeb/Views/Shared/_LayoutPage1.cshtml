        .nav-menu.sticky {
            position: sticky;
            height: auto;
            top: 0;
            background-color: white;
            opacity: 0.9;
        }

            .nav-menu.sticky ul li a {
                color: black;
            }

            .nav-menu.sticky ul li > .sub_menu {
                padding-top: 20px;
